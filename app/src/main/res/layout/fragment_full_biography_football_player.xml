<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/full_biography_football_player_bg_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/full_biography_football_player_photo_players_constraint_layout"
            app:srcCompat="@drawable/ic_team_composition_bg_txt" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@+id/full_biography_football_player_bg_img"
            app:layout_constraintTop_toBottomOf="@+id/full_biography_football_player_photo_players_constraint_layout">

            <TextView
                android:id="@+id/full_biography_football_player_dossier_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/parimatch_regular"
                android:text="@string/dossier"
                android:textColor="@color/main_bg_item"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/full_biography_football_player_role_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/parimatch_light"
                android:text="@string/role"
                android:textColor="@color/main_bg_item"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/full_biography_football_player_number_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/parimatch_light"
                android:text="@string/number"
                android:textColor="@color/main_bg_item"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/full_biography_football_player_national_team_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/parimatch_light"
                android:text="@string/national_team"
                android:textColor="@color/main_bg_item"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/full_biography_football_player_age_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/parimatch_light"
                android:text="@string/age"
                android:textColor="@color/main_bg_item"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/full_biography_football_player_weight_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/parimatch_light"
                android:text="@string/weight"
                android:textColor="@color/main_bg_item"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/full_biography_football_player_height_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/parimatch_light"
                android:text="@string/height"
                android:textColor="@color/main_bg_item"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/full_biography_football_player_citizenship_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/parimatch_light"
                android:text="@string/citizenship"
                android:textColor="@color/main_bg_item"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/full_biography_football_player_home_img_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_main_home" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/full_biography_football_player_back_img_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:background="@drawable/ic_main_back" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/full_biography_football_player_photo_players_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@color/main_bg_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/full_biography_football_player_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/parimatch_medium"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constraintStart_toEndOf="@+id/full_biography_football_player_photo_players_img"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Название" />

            <TextView
                android:id="@+id/full_biography_football_player_city_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/parimatch_light"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/full_biography_football_player_photo_players_img"
                app:layout_constraintTop_toBottomOf="@+id/full_biography_football_player_name_txt"
                tools:text="Город" />

            <TextView
                android:id="@+id/full_biography_football_player_add_players_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/parimatch_light"
                android:text="@string/add_favorite_players"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/full_biography_football_player_add_players_img"
                app:layout_constraintEnd_toEndOf="@+id/full_biography_football_player_add_players_img"
                app:layout_constraintStart_toStartOf="@+id/full_biography_football_player_add_players_img"
                app:layout_constraintTop_toTopOf="@+id/full_biography_football_player_add_players_img" />

            <TextView
                android:id="@+id/full_biography_football_player_number_players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/parimatch_medium"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="№1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/full_biography_football_player_photo_players_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/ic_main_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/full_biography_football_player_add_players_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/full_biography_football_player_city_txt"
                app:srcCompat="@drawable/ic_main_add_players" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.555" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/full_biography_football_player_bg_img"
            app:layout_constraintEnd_toEndOf="@+id/full_biography_football_player_bg_img"
            app:layout_constraintStart_toStartOf="@+id/full_biography_football_player_bg_img"
            app:layout_constraintTop_toTopOf="@+id/guideline_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/full_biography_football_player_biography_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/parimatch_regular"
                    android:text="@string/biography" android:isScrollContainer="true"
                    android:textColor="@color/main_bg_item"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/full_biography_football_player_full_biography_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/parimatch_light"
                    android:textColor="@color/main_bg_item"
                    android:textSize="20sp"
                    tools:text=" св что яу появился на св что я" />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>