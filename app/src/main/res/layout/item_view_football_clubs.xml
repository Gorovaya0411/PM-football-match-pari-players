<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="10dp"
    android:background="@color/main_bg_item">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_view_football_clubs_photo_players_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/ic_main_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_view_football_clubs_name_txt"
        android:layout_width="wrap_content"
        android:padding="2dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/parimatch_medium"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/item_view_football_clubs_photo_players_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Название" />

    <TextView
        android:id="@+id/item_view_football_clubs_city_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/parimatch_light"
        android:textColor="@color/black"
        android:padding="2dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/item_view_football_clubs_photo_players_img"
        app:layout_constraintTop_toBottomOf="@+id/item_view_football_clubs_name_txt"
        tools:text="Город" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_view_football_clubs_go_over_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_football_club_bg_go" />

    <TextView
        android:id="@+id/item_view_football_clubs_go_over_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/parimatch_light"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="@string/go_over"
        app:layout_constraintBottom_toBottomOf="@+id/item_view_football_clubs_go_over_img"
        app:layout_constraintEnd_toEndOf="@+id/item_view_football_clubs_go_over_img"
        app:layout_constraintStart_toStartOf="@+id/item_view_football_clubs_go_over_img"
        app:layout_constraintTop_toTopOf="@+id/item_view_football_clubs_go_over_img" />
</androidx.constraintlayout.widget.ConstraintLayout>